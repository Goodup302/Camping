<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/camping?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
    <property name="hbm2ddl.auto">create</property>
    <property name="show_sql">true</property>
    <mapping class="fr.gadoy.camping.entities.MealId"/>
    <mapping class="fr.gadoy.camping.entities.Selectedoption"/>
    <mapping class="fr.gadoy.camping.entities.Location"/>
    <mapping class="fr.gadoy.camping.entities.SelectedoptionId"/>
    <mapping class="fr.gadoy.camping.entities.Mealtype"/>
    <mapping class="fr.gadoy.camping.entities.Seasontype"/>
    <mapping class="fr.gadoy.camping.entities.Meal"/>
    <mapping class="fr.gadoy.camping.entities.Option"/>
    <mapping class="fr.gadoy.camping.entities.User"/>
    <mapping class="fr.gadoy.camping.entities.Booking"/>
    <mapping class="fr.gadoy.camping.entities.Typelocation"/>
    <mapping class="fr.gadoy.camping.entities.Usertype"/>
    <mapping class="fr.gadoy.camping.entities.Bill"/>
  </session-factory>
</hibernate-configuration>
